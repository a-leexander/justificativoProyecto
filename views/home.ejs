<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <title>Dashboard Justificativos - UCSC</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/resources/css/estilos.css">
</head>
<body>

    <div class="header-container">
        <a href="home"><img src="/resources/img/logo.png" alt="Logo"></a>
        <a href="/logout" class="text-danger fw-bold text-decoration-none small text-uppercase">Cerrar Sesión</a>
    </div>

    <div class="main-card">
        <div class="card-header d-flex justify-content-between align-items-cente    r">
            <h6 class="dashboard-title">Justificativos</h6>
            <div class="d-flex align-items-center gap-3">
                <div class="d-flex gap-2">
                    <div class="mini-stat bg-dark"><small>TOTAL</small><span><%= stats.total %></span></div>
                    <div class="mini-stat bg-success"><small>OK</small><span><%= stats.aprobados %></span></div>
                    <div class="mini-stat bg-warning text-dark"><small>PND</small><span><%= stats.pendientes %></span></div>
                    <div class="mini-stat bg-danger"><small>RECH</small><span><%= stats.rechazados %></span></div>
                </div>
                <div class="search-container">
                    <i class="bi bi-search search-icon"></i>
                    <input type="text" id="searchBox" class="search-input" placeholder="Buscar...">
                </div>
            </div>
        </div>
        
        <table class="table-main" id="mainTable">
            <thead>
                <tr>
                    <th class="col-1">RUT</th>
                    <th class="col-2">Nombre</th>
                    <th class="col-3">Correo</th>
                    <th class="col-4">Carrera</th>
                    <th class="col-5">Asignatura</th>
                    <th class="col-6">Fecha</th>
                    <th class="col-7">Estado</th>
                </tr>
            </thead>
            <tbody>
                <% if (datos && datos.length > 0) { 
                    datos.forEach(function(item) { %>
                    <tr onclick="showDetails('<%= item.rut %>', '<%= item.nombre_completo %>', '<%= item.correo %>', '<%= item.carrera %>', '<%= item.asignatura %>', '<%= item.fecha_prueba %>')">
                        <td class="col-1"><strong><%= item.rut %></strong></td>
                        <td class="col-2"><%= item.nombre_completo %></td>
                        <td class="col-3"><%= item.correo %></td>
                        <td class="col-4"><%= item.carrera %></td>
                        <td class="col-5"><%= item.asignatura %></td>
                        <td class="col-6"><%= item.fecha_prueba ? new Date(item.fecha_prueba).toLocaleDateString('es-CL') : 'N/A' %></td>
                        <td class="col-7">
                            <span class="badge <%= item.estado === 'Aprobado' ? 'bg-success' : (item.estado === 'Rechazado' ? 'bg-danger' : 'bg-warning text-dark') %>">
                                <%= item.estado %>
                            </span>
                        </td>
                    </tr>
                <% }); } %>
            </tbody>
        </table>
    </div>

    <div class="modal fade" id="detailsModal" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content shadow-lg">
                <div class="modal-header">
                    <h5 class="modal-title fw-bold">Detalles del Alumno</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body p-4">
                    <div class="detail-group">
                        <span class="detail-label">Nombre Completo</span>
                        <p id="modal-nombre" class="detail-value"></p>
                    </div>
                    <div class="detail-group">
                        <span class="detail-label">RUT</span>
                        <p id="modal-rut" class="detail-value"></p>
                    </div>
                    <div class="detail-group">
                        <span class="detail-label">Fecha de Evaluación</span>
                        <p id="modal-fecha" class="detail-value"></p>
                    </div>
                    <div class="detail-group">
                        <span class="detail-label">Correo Institucional</span>
                        <p id="modal-correo" class="detail-value"></p>
                    </div>
                    <div class="detail-group">
                        <span class="detail-label">Asignatura</span>
                        <p id="modal-asignatura" class="detail-value"></p>
                    </div>
                </div>
                <div class="modal-footer border-0">
                    <button type="button" class="btn btn-danger w-100 py-2 fw-bold" style="background:var(--rojo); border:none;">GESTIONAR SOLICITUD</button>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        const normalizeText = t => t.normalize("NFD").replace(/[\u0300-\u036f]/g, "").toLowerCase();
        
        document.getElementById('searchBox').onkeyup = function() {
            const term = normalizeText(this.value);
            document.querySelectorAll('#mainTable tbody tr').forEach(row => {
                row.style.display = normalizeText(row.innerText).includes(term) ? 'flex' : 'none';
            });
        };

        const modalObj = new bootstrap.Modal('#detailsModal');
        function showDetails(rut, nombre, correo, carrera, asig, fecha) {
            document.getElementById('modal-rut').innerText = rut;
            document.getElementById('modal-nombre').innerText = nombre;
            document.getElementById('modal-correo').innerText = correo;
            document.getElementById('modal-asignatura').innerText = asig;
            const f = new Date(fecha);
            document.getElementById('modal-fecha').innerText = (fecha && fecha !== 'null') ? f.toLocaleDateString('es-CL') : 'N/A';
            modalObj.show();
        }
    </script>
    <% if (user && user.tipo === "A") { %>
    <a href="/formulario" class="btn-flotante">
        Crear formulario
    </a>
<% } %>
</body>
</html>