<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <title>Dashboard Justificativos - UCSC</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/resources/css/estilos.css">
</head>
<body>

    <div class="header-container">
        <a href="home"><img src="/resources/img/logo.png" alt="Logo"></a>
        <a href="/logout" class="text-danger fw-bold text-decoration-none small text-uppercase">Cerrar Sesi√≥n</a>
    </div>

    <div class="main-card">
        <div class="card-header d-flex justify-content-between align-items-cente    r">
            <h6 class="dashboard-title">Justificativos</h6>
            <div class="d-flex align-items-center gap-3">
                <% if (stats) { %>
<div class="d-flex gap-2">
    <div class="mini-stat bg-dark">
        <small>TOTAL</small>
        <span><%= stats.total %></span>
    </div>
    <div class="mini-stat bg-success">
        <small>OK</small>
        <span><%= stats.aprobados %></span>
    </div>
    <div class="mini-stat bg-warning text-dark">
        <small>PND</small>
        <span><%= stats.pendientes %></span>
    </div>
    <div class="mini-stat bg-danger">
        <small>RECH</small>
        <span><%= stats.rechazados %></span>
    </div>
</div>
<% } %>
                <div class="search-container">
                    <i class="bi bi-search search-icon"></i>
                    <input type="text" id="searchBox" class="search-input" placeholder="Buscar...">
                </div>
            </div>
        </div>
        
        <table class="table-main" id="mainTable">
            <thead>
                <tr>
                    <th class="col-1">RUT</th>
                    <th class="col-2">Nombre</th>
                    <th class="col-3">Correo</th>
                    <th class="col-4">Carrera</th>
                    <th class="col-5">Asignatura</th>
                    <th class="col-6">Fecha</th>
                    <th class="col-7">Estado</th>
                </tr>
            </thead>
            <tbody>
                <% if (datos && datos.length > 0) { 
                    datos.forEach(function(item) { %>

    <tr style="cursor:pointer"
    onclick="window.location.href='/justificativo/<%= item.id_inasistencia %>'">

    <td class="col-1"><strong><%= item.rut %></strong></td>
    <td class="col-2"><%= item.nombre_completo %></td>
    <td class="col-3"><%= item.correo %></td>
    <td class="col-4"><%= item.carrera %></td>
    <td class="col-5"><%= item.asignatura %></td>
    <td class="col-6">
        <%= item.fecha_prueba ? new Date(item.fecha_prueba).toLocaleDateString('es-CL') : 'N/A' %>
    </td>
    <td class="col-7">
        <span class="badge 
        <%= item.estado === 3 ? 'bg-success' : (item.estado === 2 ? 'bg-danger' : 'bg-warning text-dark') %>">
        <%= item.estado === 3 ? 'Aprobado' : (item.estado === 2 ? 'Rechazado' : 'Pendiente') %>
        </span>
    </td>
</tr>

                <% }); } %>
            </tbody>
        </table>
    </div>



    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        const normalizeText = t => t.normalize("NFD").replace(/[\u0300-\u036f]/g, "").toLowerCase();
        
        document.getElementById('searchBox').onkeyup = function() {
            const term = normalizeText(this.value);
            document.querySelectorAll('#mainTable tbody tr').forEach(row => {
                row.style.display = normalizeText(row.innerText).includes(term) ? 'flex' : 'none';
            });
        };

        
    </script>
    <% if (user.tipo === "A") { %>
    <a href="/formulario" class="btn-flotante">
        Crear justificativo
    </a>
<% } %>
   

</body>
</html>